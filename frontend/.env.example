# Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_URL=http://localhost:3001

# Solana Network Configuration
REACT_APP_SOLANA_NETWORK=mainnet-beta
# REACT_APP_SOLANA_NETWORK=devnet
# REACT_APP_SOLANA_NETWORK=testnet

# Custom RPC Endpoint (optional - defaults to public RPC)
# REACT_APP_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Analytics (if you add analytics later)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token_here

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_ANALYTICS=false

# External Services (if you add them later)
# REACT_APP_COINMARKETCAP_API_KEY=your_api_key_here
# REACT_APP_ALCHEMY_API_KEY=your_alchemy_key_here

# Build Configuration
# GENERATE_SOURCEMAP=false
# REACT_APP_BUILD_ENV=development
